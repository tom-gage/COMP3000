                                Text="{Binding Description}"
                                FontAttributes="Italic"
                                VerticalOptions="End" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>-->
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>