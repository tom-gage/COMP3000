<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COMP3000Project.Views.Login.LoginPage"
             Title="login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Login Page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding FeedbackText}"
                   TextColor="{Binding FeedbackTextColour}"
                   IsVisible="{Binding FeedbackTextIsVisible}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="username"
                   Text="{Binding Username}"
                   x:Name="entUsername"/>
            
            <Entry Placeholder="password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   x:Name="entPassword"/>

            <Button Text="Login"
                    Command="{Binding Login}"
                    />

            <Button Text="Go to SignUp page"
                    Command="{Binding GoToSignUpPage}"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>